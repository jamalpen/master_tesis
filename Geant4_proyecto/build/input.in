# Verbose levels
/control/verbose 0
/tracking/verbose 1

# Set world dimensions in kilometers
/mydetector/worldDimensions 100 100 150 km

# Set particle position in meters
/mydetector/particlePosition 50000 0 0 m

# Set the unit for output (m or km)
/mydetector/unit m

# Set the particle file
/spectrum/readfile particle.shw.bz2

# Run the simulation
/run/beamOn 1
